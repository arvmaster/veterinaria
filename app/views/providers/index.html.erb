<table>
  <tr>
    <th>Nombre&nbsp;</th>
    <th>Rut&nbsp;</th>
    <th>Razon social&nbsp;</th>
    <th>Direccion&nbsp;</th>
    <th>Email&nbsp;</th>
    <th>Giro&nbsp;</th>
    <th>Fono&nbsp;</th>
    <th colspan='3'></th>
  </tr>
 
<% @providers.each do |provider| %>
  <tr>
    <td><%= provider.nombre_proveedor %>&nbsp;</td>
    <td><%= provider.rut %>&nbsp;</td>
    <td><%= provider.razon_social %>&nbsp;</td>
    <td><%= provider.direccion %>&nbsp;</td>
    <td><%= provider.email %>&nbsp;</td>
    <td><%= provider.giro %>&nbsp;</td>
    <td><%= provider.fono %>&nbsp;</td>

    <td><%= link_to 'Ver', provider_path(provider) %>&nbsp;</td>
    <td><%= link_to 'Editar', edit_provider_path(provider) %>&nbsp;</td>
    <td><%= link_to 'Eliminar', provider_path(provider),
                    method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
  </tr>
<% end %>
</table>
