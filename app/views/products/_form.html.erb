<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
                <h1 class="modal-title"><%= title %></h1>
        <button type="button" class="close" onclick="cerrarModal()" aria-label="Close"><span aria-hidden="true">&times;</span></button>

      </div>
      <div id="modal-errores" class='alert alert-warning' style="display: none;"></div>
      <div>
        <%= form_for @product, html: {class: "form-horizontal", multipart: "true"}, remote: true do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group">
          <br>
          <br>
          <br>
          <br>
          <br>
            <%= f.label :nombre_producto, "Nombre", class: 'control-label col-sm-3' %>
            <%= f.text_field :nombre_producto %>
          </div>

          <div class="form-group">
            <%= f.label :tipo_producto, "Tipo", class: 'control-label col-sm-3' %>
            <%= f.text_field :tipo_producto %>
          </div>

          <div class="form-group">
            <%= f.label :descripcion, "Descripcion", class: 'control-label col-sm-3' %>
            <%= f.text_area :descripcion %>
          </div>

          <div class="form-group">
            <%= f.label :cantidad, "Cantidad", class: 'control-label col-sm-3' %>
            <%= f.number_field :cantidad %>
          </div>

          <div class="form-group">
            <%= f.label :caducidad, "Caducidad", class: 'control-label col-sm-3' %>
  <%=date_field :caducidad, params[:caducidad],default: Date.tomorrow, min: Date.tomorrow, max: Date.tomorrow+1.year, class: "form-control"%>
          </div>


          <div class="form-group">
            <%= f.label :provider_id, "Proveedor", class: 'control-label col-sm-3' %>
            <%= f.select(:provider_id, Provider.all.collect {|u| [u.nombre_proveedor, u.id]}, :prompt => 'Elegir proveedor') %>

          </div>
          <div class="modal-footer">
            <%= f.submit class: 'btn btn-primary', value: "Guardar" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>