<% if @product.errors.empty? %>
	// add the row to the table, show alert and hide modal
	$('#container').append(' <%= j render "row", product: @product %>');
	$('#product-modal').remove();
	$('.modal-backdrop').remove();
	$('.alert-success').html("El proveedor ha sido creado con Ã©xito").show();
<% else %>
	<% puts "Hay un error en formulario" %>
	console.log("<%= @product.errors.messages %>")
	error = document.getElementById('modal-errores');
	error.innerHTML = '<%=  j render "error" %>';
	error.style.display = "block";
	// $('#modal-errores').html('<%= j render "error" %>');
<% end %>
