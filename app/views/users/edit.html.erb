<h2>Editar información de: <%= @user.nombre %> <%=@user.ap_pat%></h2>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Rut %><br />
    <%= f.text_field :rut,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Apellido_paterno %><br />
    <%= f.text_field :ap_pat,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Apellido_materno %><br />
    <%= f.text_field :ap_mat ,class: "form-control"%>
  </div>
    <div class="field">
    <%= f.label :Celular_de_contacto %><br />
    <%= f.telephone_field :celular ,class: "form-control"%>
  </div>
    <div class="field">
    <%= f.label :Direccion %><br />
    <%= f.text_field :direccion,class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Comuna %><br />
     <%= f.select(:comuna,["Cerrillos", "Cerro Navia", "Conchalí", "El Bosque", "Estación Central", "Huechuraba", "Independencia", "La Cisterna", "La Florida", "La Granja", "La Pintana", "La Reina", "Las Condes", "Lo Barnechea", "Lo Espejo", "Lo Prado", "Macul", "Maipú", "Ñuñoa", "Pedro Aguirre Cerda", "Peñalolén", "Providencia", "Pudahuel", "Quilicura", "Quinta Normal", "Recoleta", "Renca", "San Joaquín", "San Miguel", "San Ramón", "Vitacura", "Puente Alto", "Pirque", "San José de Maipo", "Colina", "Lampa", "Tiltil", "San Bernardo", "Buin", "Calera de Tango", "Paine", "Melipilla", "Alhué", "Curacaví", "María Pinto", "San Pedro", "Talagante", "El Monte", "Isla de Maipo", "Padre Hurtado", "Peñaflor"], {}, { :class => 'select' }) %>
  </div>

  <div class="field">
    <%= f.label :rol %><br />
     <%= f.select(:role,["cliente","veterinario","peluquero","trabajador"], {}, { :class => 'select' }) %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
