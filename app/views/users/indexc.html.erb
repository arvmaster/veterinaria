
<h1>Lista de Clientes</h1>

<table class="table table-sm  table-hover">
   <tr class="bg-success">
    <th>Nombre </th>
    <th>Apellidos </th>
    <th> Email</th>
    <th>Estado</th>
    <th></th>
  </tr>

 
<% @users.each do |user| %>
  <tr>  

      <td><%= user.nombre %></td>
      <td><%= user.ap_pat %> <%= user.ap_mat %></td>
      <td><%=user.email%></td>
      <%if user.activado?%>
      <td>activo</td>
      <%else%>
      <td>inactivo</td>
      <%end%>      
      <td><%= link_to 'Detalles', user_path(user), class: "btn btn-primary btn-sm" %> </td>

  </tr>
<% end %>

</table>
<div id="new-user">
<%= link_to 'Nuevo usuario', new_user_path,remote: true, class: "btn btn-primary btn-sm" %>
</div>