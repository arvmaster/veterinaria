
<h1><%=@user.nombre.capitalize%>  <%=@user.ap_pat.capitalize%>  <%=@user.ap_mat.capitalize%></h1>
<%= form_for [@user,@pet]  do |f| %>
  <p>
    <%= f.label :nombre_mascota %><br>
    <%= f.text_field :nombre,class: "form-control"%>
  </p>
 
  <p>
    <%= f.label :tipo_mascota %><br>
  <%= f.select(:tipo_mascota,["Gato","Perro"], {}, { :class => 'form-control select' }) %>
  </p>
  <p>
    <%= f.label :sexo_mascota %><br>
  <%= f.select(:sexo,["Macho","Hembra"], {}, { class: 'select ' }) %>
  </p>
  <p>
    <%= f.label :raza_mascota %><br>
    <%= f.text_field :raza,class: "form-control" %>
  </p>
  <p>
    <%= f.label :edad_mascota %><br>
    <%= f.number_field :edad,in: 1.0..20.0, step: 1.0 ,class: "form-control"%>
  </p>
  <p>

  </p>

  <p>
    <%= f.submit "Enviar",class: "btn btn-primary"%>
  
  </p>  
<% end %>

