<h1>Listing Reservation</h1>
<%= link_to 'Reserva de horas', new_reservation_path %>
<body>
<table>
  <tr>

    <th>fecha</th>

    <th colspan="3"></th>
  </tr>
 
<% @reservations.each do |reservation| %>
  <tr>  

      <td><%= reservation.fecha_reserva %></td>

    <td><%= link_to 'Show', reservation_path(reservation) %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
